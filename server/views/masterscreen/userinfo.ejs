<!DOCTYPE html>
<html lang="en" ng-app="MyApp">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
</head>
<body>
<% include ../layout.ejs %>
<script type="text/javascript" src="javascripts/service/UserService.js"></script>
<script type="text/javascript" src="javascripts/controller/UserCntl.js"></script>
<div class="row container-fluid" ng-controller="UserController">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">User Information</div>
            <form class="form-horizontal" role="form">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="UserType">User Type :</label>
                        <div class="col-sm-8">
                            <select class="form-control selectpicker"
                                ng-model="userinfo.usertypeid"
                                ng-options="value.id as value.name for value in  userTypes" required>
                                <option value="">-- Select user Types--</option>
                        </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="UserName">User Name :</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="UserName" placeholder="User Name" ng-model="userinfo.username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="Password">Password:</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="Password" placeholder="Password" ng-model="userinfo.password">
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary" ng-click="addUser(userinfo)" ng-hide="editMode">Add</button>
                            <button type="submit" class="btn btn-primary" ng-click="updateUser(userinfo)" ng-show="editMode">Update</button>
                            <button type="submit" class="btn btn-danger" ng-click="resetUser()">Reset</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th><div align="center">Edit</div></th>
                        <th><div align="center">User Type</div></th>
                        <th><div align="center">User Name</div></th>
                        <th><div align="center">Delete</div></th>
                    </tr>
                    <!--<tr>
                        <td>&nbsp;</td>
                        <td><input ng-model="userinfo_type" /></td>
                        <td><input ng-model="userinfo_name" /></td>
                        <td>&nbsp;</td>
                    </tr>-->
                    </thead>
                    <tbody>
                    <tr ng-repeat="userinfo in userinfoFound = ( userList| filter:{userType: userinfo_type, userName:userinfo_name} | orderBy:predicate)">
                        <td><button class="btn btn-info" ng-click="editUser(userinfo)">
                            <span class="glyphicon glyphicon-edit text-info"></span>
                            </button>
                        </td>
                        <td> {{userinfo.usertypename}} </td>
                        <td> {{userinfo.username}} </td>
                        <td><button class="btn btn-danger" ng-click="deleteUser(userinfo)">
                            <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>

