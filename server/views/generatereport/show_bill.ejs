<!DOCTYPE html>
<html lang="en" ng-app="MyApp">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
</head>
<body>
<% include ../layout.ejs %>
<script type="text/javascript" src="javascripts/service/SubTypeService.js"></script>
<script type="text/javascript" src="javascripts/service/TypeService.js"></script>
<script type="text/javascript" src="javascripts/service/BillService.js"></script>
<script type="text/javascript" src="javascripts/controller/BillCntl.js"></script>
<script type="text/javascript" src="javascripts/lib/MedisoftFactory.js"></script>
<div ng-controller="BillController" class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">Bill Search</div>
        <div class="panel-body">
            <div class="row">
                <div class="pull-left">
                    <input type="text" class="form-control" ng-model="billNumber" placeholder="REF/2015/02/005">
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <button class="btn btn-primary" ng-click="getBill(billNumber)" ng-show="billNumber">Show Bill
                    Data
                </button>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Type Name</th>
                    <th>Sub Type Name</th>
                    <th>Sub Type Count</th>
                    <th>Final Amount</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="typedata in billingData">
                    <td>{{typedata.typename}}</td>
                    <td>{{typedata.subtypename}}</td>
                    <td>{{typedata.count}}</td>
                    <td>{{typedata.amount * typedata.count}}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-lg-4">
                    <label class="pull-right">Total : {{totalAmount | currency}}</label>
                    <button ng-click="printBill()" class="btn btn-primary btn-lg" ng-show="billingData">Print Bill
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>